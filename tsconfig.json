{
  "compilerOptions": {
    "skipLibCheck": true,
    "target": "ES6",
    "module": "CommonJS",
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "noImplicitAny": true,
    "alwaysStrict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
  },
  "exclude": [
    "/**/*.test.ts"
  ],
  "include": [
    "src/index.ts",
    "src/**/*.ts"
  ]
}